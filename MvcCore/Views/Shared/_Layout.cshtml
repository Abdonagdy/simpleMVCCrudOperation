<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
   <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.js"></script>
    <nav class="navbar navbar-expand-lg navbar-light bg-secondary">
        <div class="container-fluid ">

            <a class="navbar-brand" href="#">
                <i class="fa-solid fa-house me-3 text-white"></i>
                <span class="text-white"></span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">

                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-white" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-white" asp-controller="Users" asp-action="New">Add User</a>
                    </li>
                    <li class="nav-item me-5">
                        <a class="nav-link  text-white" asp-controller="Users" asp-action="index">Show User</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link  text-white" asp-controller="CategoryTask" asp-action="Index">Show CategoryTask</a>
                    </li>
                    <li class="nav-item me-5">
                        <a class="nav-link  text-white" asp-controller="CategoryTask" asp-action="New">Add CategoryTask</a>
                    </li>
                     <li class="nav-item ">
                        <a class="nav-link  text-white" asp-controller="Tasks" asp-action="Index">Show Task</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link  text-white" asp-controller="Tasks" asp-action="New">Add Task</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>
</body>
</html>
