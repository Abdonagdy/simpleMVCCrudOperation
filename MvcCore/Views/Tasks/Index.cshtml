@using MvcCore.Models
@model List<Tasks>
@{
	SelectList status1 = new SelectList(Enum.GetValues(typeof(MvcCore.Models.TaskStatus)));
}
	
		<div class="container text-center m-2" >
		       <a class="btn btn-primary m-3" asp-controller="Tasks" asp-action="New">
					Add Task
				</a>
		</div>

		<div class="container  mt-2">
	<div class="row ">
		<div class="col" >
			<form   asp-controller="Tasks"  asp-action="index"   method="get">
				<input class="form-control w-50 mb-2 rounded-5"  name="searchString" placeholder="Enter Name Of Task" />
				<select name="statusFilter"   asp-items="status1" class="form-control w-50 mb-2 rounded-5">
				</select>
				<input type="submit" class=" bg-secondary text-white p-2 rounded-5" value="Filter" />
			</form>
		</div>
		</div>
</div>

		<div class="container bg-info">
		<div class="row  p-5 mt-5">
			<div class="col">Name</div>
			<div class="col">Details</div>
			<div class="col">Edite</div>
			<div class="col">delate</div>
	</div>
	</div>
	<div class="container bg-info">
	@if(Model.Any())
	{
		@foreach (var item in Model)
		{
			
				<div class="row mt-5  p-5">
					<div class="col">
					@item.Name 
					</div>
					<div class="col">
							<a class="btn btn-outline-secondary" asp-controller="Tasks" asp-action="Details" asp-route-id="@item.Id">
						Details
					</a>
					</div>
					<div class="col">
							<a class="btn btn-secondary" asp-controller="Tasks" asp-action="Edite" asp-route-id="@item.Id">
						Edite
					</a>
					</div>
					<div class="col">
							<a class="btn btn-danger" asp-controller="Tasks" asp-action="Delete" asp-route-id="@item.Id">
						Delete
					</a>
					</div>
			</div>
	
			
		}
		
	}
	
	</div>

